---
import { cn } from '@/utils/class';
import type { HTMLAttributes } from 'astro/types';
import { cva, type VariantProps } from 'class-variance-authority'

const badgeVariants = cva('rounded-full px-2.5 py-1.5 text-sm text-white', {
  variants: {
    intent: {
      'gradient-purple': [
        'bg-gradient-to-r',
        'from-pink-100',
        'to-purple-500',
      ],
    },
  },
  defaultVariants: {
    intent: 'gradient-purple',
  }
});

export interface Props extends HTMLAttributes<'span'>, VariantProps<typeof badgeVariants> {}

const { intent, ...props } = Astro.props;
---

<span
  class={cn(badgeVariants({ intent }))}
  {...props}
>
  <slot />
</span>

