---
import { cn } from '@/utils/class';
import type { HTMLAttributes } from 'astro/types';
import { cva, type VariantProps } from 'class-variance-authority'

const socmedLinkVariants = cva('rounded-full w-10 h-10 p-2', {
  variants: {
    intent: {
      default: [
        'bg-none',
        'border-[1px]',
        'border-white',
      ],
      github: [
        'bg-brand-github',
      ],
      instagram: [
        'bg-brand-instagram',
      ],
      x: [
        'bg-brand-x',
      ],
      linkedin: [
        'bg-brand-linkedin',
      ],
      spotify: [
        'bg-brand-spotify',
      ]
    },
  },
  defaultVariants: {
    intent: 'default',
  }
});

export interface Props extends HTMLAttributes<'a'>, VariantProps<typeof socmedLinkVariants> {}

const { intent, ...props } = Astro.props;
---

<a
  class={cn(socmedLinkVariants({ intent }))}
  {...props}
>
  <slot />
</a>

