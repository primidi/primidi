---
import Contact from '@/components/Contact.astro';
import LatestWriting from '@/components/LatestWriting.astro';
import Hero from '@/components/Hero.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout
  title="Primidi | Gharis Primada Hariyono - Software Engineer & Tech Writer"
  description="Welcome to Primidi - the personal website of Gharis Primada Hariyono, a passionate software engineer sharing insights on programming, technology, and professional development."
  keywords={[
    'Gharis Primada Hariyono',
    'Software Engineer',
    'Programming',
    'Technology',
    'Web Development',
    'Tech Blog',
    'Primidi',
    'Indonesia Developer',
    'Software Development',
    'Programming Tutorials'
  ]}
  type="profile"
  image="/profile-header.png"
  imageAlt="Gharis Primada Hariyono - Software Engineer"
>
  <img
    src="/circle-blur.svg"
    alt="circle-blur-left"
    class="absolute left-10 top-0 z-0 hidden lg:block"
  />
  <div class="mx-4 my-8 flex items-center justify-center">
    <div class="z-10 flex w-96 flex-col gap-y-8">
      <Hero />
      <LatestWriting />
      <Contact />
    </div>
  </div>
</BaseLayout>